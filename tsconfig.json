{
  "compilerOptions": {
    "target": "ES2021",
    "module": "es6",
    "sourceMap": true,
    "outDir": "./dist/",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
  },
  "exclude": ["node_modules"],
  "files": ["src/index.ts"]
}